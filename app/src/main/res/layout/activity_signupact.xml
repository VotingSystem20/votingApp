<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".signupact">
    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/signname"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:hint="Full name as per voting card"
        />

    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/signemail"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:hint="Email number"
        />
    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/signpass"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:hint="Password"
        />

    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/signpassconf"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:hint="Confirm password"
        />

    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/signvotercardno"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:hint="Votercard number"
        />


    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/signmobile"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:maxLength="10"
        android:paddingLeft="10sp"
        android:hint="Mobile number"
        />

    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/signadharcardno"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:maxLength="12"
        android:paddingLeft="10sp"
        android:hint="Adharcard number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="Submit"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:id="@+id/signsub"
        android:background="@drawable/signbutton"
        android:textSize="15sp"/>
</LinearLayout>