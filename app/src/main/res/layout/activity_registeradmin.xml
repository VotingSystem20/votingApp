<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_height="match_parent"
    tools:context=".Registeradmin">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regvotercardno"
        android:textSize="20sp"
        android:textAlignment="center"
        android:hint="VOTER CARD NUMBER"
        android:paddingLeft="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:id="@+id/regdetail"
        android:hint="user data"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET DATA"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:id="@+id/refgetdatabtn"
        android:background="@drawable/signbutton"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reguserstate"
        android:textSize="20sp"
        android:hint="STATE"
        android:textAlignment="center"
        android:paddingLeft="15sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regusercity"
        android:textAlignment="center"
        android:textSize="20sp"
        android:hint="CITY"
        android:paddingLeft="15sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reguservordnumber"
        android:textSize="20sp"
        android:textAlignment="center"
        android:hint="VORD NUMBER"
        android:paddingLeft="15sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VARIFY"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:id="@+id/refvarifybtn"
        android:background="@drawable/signbutton"/>


</LinearLayout>