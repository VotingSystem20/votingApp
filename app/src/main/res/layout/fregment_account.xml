<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/accountbackend"
        android:orientation="vertical">


        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50sp"
            android:background="@drawable/appicon"
            android:src="@drawable/loginicon" />

        <EditText

            android:id="@+id/accountemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:hint="voter card "
            android:textAlignment="center"
            android:textSize="15sp" />
    </LinearLayout>


    <EditText
        android:layout_marginTop="40sp"
        android:id="@+id/tvacoountname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ACCOUNT FEED"
        android:layout_marginRight="20sp"
        android:textSize="15sp"
        android:layout_marginLeft="15sp"
    />


    <EditText
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:id="@+id/tvacoountstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="VARIFIED"
        android:textSize="15sp"
        android:layout_marginLeft="15sp"
        />


    <EditText
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:id="@+id/tvacoountmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ACCOUNT FEED"
        android:textSize="15sp"
        android:layout_marginLeft="15sp"
        />

    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/accountvote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ACCOUNT FEED"
        android:layout_marginRight="20sp"
        android:textSize="15sp"
        android:layout_marginLeft="15sp"
        />

</LinearLayout>